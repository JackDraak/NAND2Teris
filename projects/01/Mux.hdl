/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

// First draft I came-up with for this req was A.B+B.C+A.C', 
// but after sleeping on it, I think I can trim an AND gate:
PARTS:
